<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABBEC9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="CÃ©dula Eleitoral"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imgCandidate"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:src="@drawable/user" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/candidato1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="changePicture"
                    android:padding="10dp"
                    android:text="Candidato 1" />

                <RadioButton
                    android:id="@+id/candidato2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="changePicture"
                    android:padding="10dp"
                    android:text="Candidato 2" />

                <RadioButton
                    android:id="@+id/candidato3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="changePicture"
                    android:padding="10dp"
                    android:text="Candidato 3" />
            </RadioGroup>

            <Button
                android:id="@+id/btnChangeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:onClick="vote"
                android:padding="10dp"
                android:text="Votar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:padding="10dp"
                android:text="Resultado em tempo real:"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="10dp"
                    android:text="Candidato 1:"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtViewCandidate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="10dp"
                    android:text="Candidato 2:"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtViewCandidate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="10dp"
                    android:text="Candidato 3:"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtViewCandidate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="0"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>